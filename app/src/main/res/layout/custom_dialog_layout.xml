<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/llorange"

        android:background="@drawable/cardstroke2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Time Slot"
            android:textColor="@color/black"
            android:fontFamily="@font/nunito"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textFontWeight="800"
            android:textSize="20sp"
            android:padding="16dp"
            android:gravity="center" />

        <!-- Replace RadioGroup with a vertical LinearLayout for ImageButton and text -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radio_group"
            android:orientation="vertical">

            <!-- ImageButton and text for option 1 -->
            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/image_button_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/llorange"
                    android:src="@drawable/clock"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/text_option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito"
                    android:textFontWeight="400"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- ImageButton and text for option 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/two"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/image_button_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/llorange"
                    android:src="@drawable/clock"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/text_option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito"
                    android:textFontWeight="400"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:padding="12dp" />
            </LinearLayout>

            <!-- ImageButton and text for option 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/three"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/image_button_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/llorange"
                    android:src="@drawable/clock"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/text_option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito"
                    android:textFontWeight="400"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:padding="12dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons for Cancel and OK -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancel"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:background="@drawable/search_shape"
                android:text="Cancel"
                android:fontFamily="@font/nunito"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:backgroundTint="@color/navy"
                android:gravity="center"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_ok"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:fontFamily="@font/nunito"
                android:backgroundTint="@color/navy"
                android:layout_marginStart="30dp"
                android:text="OK"
                android:gravity="center"
                android:background="@drawable/search_shape"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
