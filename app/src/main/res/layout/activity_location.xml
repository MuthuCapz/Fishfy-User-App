<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.LocationActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="48dp"
    android:fontFamily="@font/nunito"
    android:text="Choose your Location"
    android:textSize="20sp"
    android:textFontWeight="500"
    android:textColor="@color/black"/>


<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="50dp"
    android:src="@drawable/map_location_icon"/>

        <TextView
            android:id="@+id/tv_latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Lat"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="invisible"
            android:layout_marginStart="370dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Cou"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="270dp" />

        <TextView
            android:id="@+id/tv_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/bgColor"
            android:fontFamily="@font/nunito"
            android:textColor="@color/navy"
            android:textSize="10sp"
            android:text="address"
            android:visibility="invisible"
            android:layout_marginTop="300dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/shoptextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/bgColor"
        android:fontFamily="@font/nunito"
        android:text="shop"
        android:textColor="@color/red"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/tv_Locality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:gravity="center"
            android:text="Locality"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Lon"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginStart="340dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Locationbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/navy"
            android:background="@drawable/search_shape"
            android:padding="10dp"
            android:drawableStart="@drawable/locationvec"
            android:text="Pick Your Current Location"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/manualLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/blue"
        android:padding="10dp"
        android:drawableStart="@drawable/map"
        android:drawableTint="@color/navy"
        android:fontFamily="@font/nunito"
        android:text="Enter Location Manually"
        android:textAllCaps="false"
        android:textColor="@color/navy"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Locationbutton"

        />
    <TextView
        android:id="@+id/distancetextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis1"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="220dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis4"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginTop="300dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis2"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis5"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginTop="330dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis3"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="260dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/distancetextview6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dis6"
        android:visibility="invisible"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="200dp"
        android:layout_marginTop="360dp"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
