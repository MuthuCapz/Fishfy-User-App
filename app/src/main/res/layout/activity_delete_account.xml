<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/llorange"
    tools:context=".ui.activities.DeleteAccountActivity">
    <TextView
        android:id="@+id/sendmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:visibility="gone"
        android:text="Your account has been deleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/deleteBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/image_desc_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left1" />
    <TextView
        android:id="@+id/userId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile number"
        android:inputType="number"
        android:maxLength="10"
        android:focusable="false"
        android:visibility="invisible"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/nunito"
        android:textColor="@color/black"
        android:textColorHint="@color/ThickAsh"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="20dp"
        android:backgroundTint="@color/ash"
        android:lineHeight="1dp"
        android:maxLines="1"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Delete Account"
        android:gravity="center"
        android:fontFamily="@font/nunito"
        android:textSize="20sp"
        android:textFontWeight="700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"

        />

    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/namee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textColor="@color/navy"
                android:textSize="14sp"
                android:fontFamily="@font/nunito"
                android:layout_marginStart="3dp"/>
            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:textColorHint="@color/ThickAsh"
                android:textSize="13sp"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/ash"
                android:lineHeight="1dp"
                android:inputType="textPersonName"
                android:maxLines="1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Mailid"
                android:textColor="@color/navy"
                android:textSize="14sp"
                android:fontFamily="@font/nunito"
                android:layout_marginStart="3dp"/>
            <EditText
                android:id="@+id/usermail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mailid"
                android:maxLines="1"
                android:inputType="textPersonName"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:textColorHint="@color/ThickAsh"
                android:textSize="13sp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/ash"
                android:lineHeight="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usermobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/navy"

                android:textSize="14sp"
                android:fontFamily="@font/nunito"
                android:layout_marginStart="3dp"/>
            <EditText
                android:id="@+id/usermobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile number"
                android:inputType="number"
                android:maxLength="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/nunito"
                android:textColor="@color/black"
                android:textColorHint="@color/ThickAsh"
                android:textSize="13sp"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/ash"
                android:lineHeight="1dp"
                android:maxLines="1"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/userreasonn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/deleteborder"

        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason"
            android:layout_gravity="center"
            android:textColor="@color/red"
            android:paddingStart="15dp"
            android:textSize="14sp"
            android:fontFamily="@font/nunito"
            android:layout_marginStart="3dp"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/userreason"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:hint="Enter Reason"
            android:background="@drawable/deleteborder"
            android:textColorHint="@color/ThickAsh"
            android:paddingBottom="70dp"
            android:lineSpacingExtra="5dp"
            android:maxLength="150"
            android:maxLines="5"
            android:layout_gravity="center"
            android:paddingStart="18dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textSize="13sp"
            android:backgroundTint="@color/white"

            android:inputType="textMultiLine"
            android:singleLine="false"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/textview111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue"
        android:paddingStart="15dp"
        android:textSize="14sp"
        android:fontFamily="@font/nunito"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:text="Terms and Condition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userreasonn"/>

    <LinearLayout
        android:id="@+id/comfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textview111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/deletecomfirm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:layout_marginStart="5dp"
            android:theme="@style/colored_checkBox" />



        <TextView
            android:id="@+id/comfirmtext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="I confirm that deleting my account will permanently erase all data and I will lose all access."
            android:background="@drawable/deleteborder"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:paddingStart="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/nunito"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="13sp"
            android:backgroundTint="@color/llorange"
            android:lineHeight="20sp"

            android:layout_weight="1"/>

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/deleteButton"
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_shape"
        android:backgroundTint="@color/navy"
        android:text="Delete Account"
        android:textFontWeight="500"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/nunito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>