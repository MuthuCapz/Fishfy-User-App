<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.activities.OrderStatusActivity">

    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Status"

        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:textSize="20sp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/light_grey"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/detailGoToBackImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_left1"
        android:contentDescription="@string/image_desc_text" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Time:"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="18sp"

        />



        <TextView
    android:id="@+id/estimatedtime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
    android:textStyle="bold"
    android:fontFamily="@font/nunito"
    android:textSize="18sp"

         />
    </LinearLayout>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="heelo"
        android:textSize="16sp"
        android:fontFamily="@font/nunito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="130dp"/>
    <ImageView
        android:id="@+id/confirmOrder"
        android:layout_width="70dp"
        android:layout_marginStart="12dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/confirm"
        android:layout_marginTop="160dp"/>


    <ImageView
        android:id="@+id/confirmtick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="300dp"
        android:layout_marginTop="175dp"/>
<TextView
    android:id="@+id/conform"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Order confirmed"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:fontFamily="@font/nunito"
    android:textSize="20sp"
    android:layout_marginStart="110dp"
    android:layout_marginTop="175dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/orderPicked"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="12dp"
        android:src="@drawable/picked"
        android:layout_marginTop="250dp"/>
    <ImageView
        android:id="@+id/picktick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="300dp"
        android:layout_marginTop="265dp"/>
    <TextView
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order picked"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/nunito"
        android:textSize="20sp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="265dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/orderDelivered"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/delivery"

        android:layout_marginTop="350dp"/>
    <ImageView
        android:id="@+id/delivertick"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="300dp"
        android:layout_marginTop="357dp"/>
    <TextView
        android:id="@+id/delierved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order delivered"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/nunito"
        android:layout_marginStart="110dp"
        android:layout_marginTop="365dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/delitime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivered Time:"
        android:textStyle="bold"
        android:textSize="18sp"
        android:fontFamily="@font/nunito"
        android:textColor="@color/green"
        android:layout_marginTop="430dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/deliverylottie"
        android:layout_width="200dp"
        android:layout_marginTop="480dp"
        android:layout_height="200dp"
        app:lottie_fileName="delivered.json"
        app:lottie_speed="2"
        app:lottie_loop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:contentDescription="@string/image_desc_text" />
</androidx.constraintlayout.widget.ConstraintLayout>