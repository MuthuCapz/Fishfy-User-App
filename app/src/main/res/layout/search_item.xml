<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/llorange"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        app:cardCornerRadius="22dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/menuImages"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                app:cardCornerRadius="10dp"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <ImageView
                    android:id="@+id/menuImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars"/>
            </androidx.cardview.widget.CardView>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginStart="120dp"
               app:layout_constraintStart_toEndOf="@id/menuImages"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintStart_toStartOf="parent">


            <TextView
                android:id="@+id/menuFoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="20dp"
                android:textFontWeight="500"
                android:fontFamily="@font/nunito"
                android:text="Dried Mackeral"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@id/menuImages"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

               <TextView
                   android:id="@+id/menuFoodName1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="0dp"
                   android:layout_marginEnd="0dp"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/nunito"
                   android:text="Dried Mackeral"
                   android:textFontWeight="500"
                   android:textColor="@color/black"
                   android:textSize="13sp"
                   app:layout_constraintStart_toEndOf="@id/menuImages"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"/>

               <TextView
                   android:id="@+id/menuPrice"
                   android:layout_width="100dp"
                   android:layout_height="40dp"

                   android:layout_marginTop="10dp"

                   android:paddingTop="9dp"
                   android:paddingStart="9dp"
                   android:fontFamily="@font/nunito"
                   android:text="â‚¹35"
                   android:textColor="@color/navy"
                   android:textSize="15sp"
                   android:layout_marginEnd="20dp"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="0dp"

                   app:layout_constraintTop_toBottomOf="@id/menuFoodName"
                   app:layout_constraintEnd_toEndOf="parent"/>
           </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>