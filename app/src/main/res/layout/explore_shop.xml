<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:backgroundTint="@color/white"
        app:cardElevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/shopImageView1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/shopImageView"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="0dp"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/shopTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/nunito"
                android:text="Shop 1"
                android:visibility="invisible"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textFontWeight="500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/shopname"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/nunito"
                android:text="Shop 1"
                android:ellipsize="end"
                android:maxLines="2"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textFontWeight="500"
                app:layout_constraintStart_toEndOf="@id/shopImageView1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/localityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Locality"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/upto"
                app:layout_constraintStart_toStartOf="@id/upto" />

            <TextView
                android:id="@+id/upto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito"
                android:text="up to 500"
                android:textColor="@color/Dark_navy"
                android:textSize="17sp"
                android:textFontWeight="500"
                app:layout_constraintStart_toEndOf="@id/shopImageView1"
                app:layout_constraintTop_toBottomOf="@id/shopname" />

            <TextView
                android:id="@+id/freedelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito"
                android:text="tuty"
                android:textColor="@color/navy"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@id/shopname"
                app:layout_constraintStart_toEndOf="@id/upto"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>